<%- include('../fixPages/header') -%>
<%- include('../fixPages/navbar') -%>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-9 offset-md-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%=event.title %></h5>
                    <hr>
                    <p class="card-text"><%=event.description%></p>
                    <p><%=event.location%></p>
                    <div class="alert alert-info left-alert">
                        <%=event.date.toDateString()%>
                    </div>
                    <a href="<%= '/event/edit/' + event.id %>" class="btn btn-primary">Edit</a>
                    <a href="/event/delete/<%= event.id %>" class="btn btn-danger">Delete</a>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include('../fixPages/footer') -%>